@model ve_xem_phim.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Url" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Thể loại:</strong> @Model.Category.Name</p>
            <p>@Model.Description</p>
            <p><strong>Số vé còn lại:</strong> @Model.Tickets.Count(t => t.Available)</p>
            <a href="/Home/Ticket?movieId=@Model.Id" class="btn btn-primary">Mua vé</a>
        </div>
    </div>
</div>
