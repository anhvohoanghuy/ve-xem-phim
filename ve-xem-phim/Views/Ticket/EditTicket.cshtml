@model ve_xem_phim.ViewModel.EditTicketViewModel

@{
    ViewData["Title"] = "Sửa Vé";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Sửa Vé Phim</h2>

    <!-- Hiển thị các lỗi nếu có -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="EditTicket" method="post">
        <div class="form-group">
            <label for="Date">Giờ Chiếu</label>
            <input type="datetime-local" id="Date" name="newDate" class="form-control" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required />
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" }) <!-- Hiển thị lỗi nếu có -->
        </div>

        <div class="form-group">
            <label for="Price">Giá Vé</label>
            <input type="number" id="Price" asp-for="Price" class="form-control" value="@Model.Price" required />
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" }) <!-- Hiển thị lỗi nếu có -->
        </div>

        <input type="hidden" asp-for="MovieId" value="@Model.MovieId" />
        <input type="hidden" asp-for="Date" value="@Model.Date" />
        <input type="hidden" asp-for="Rom" value="@Model.Rom" />

        <button type="submit" class="btn btn-primary">Cập Nhật Vé</button>
    </form>

    <div class="mt-3">
        <a href="@Url.Action("GetRoomsAndShowtimes", "Ticket")" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
